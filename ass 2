def count (a):
  c = str(a)
  return print(len(c))

num = input("Enter a number: ")
s = int(num)
count(s)


#6

def list_jumps(jumps):
  n = len(jumps)
  index = 0

  for i in range(n):
    if index < 0 or index >= n:
      return "out-of-bounds"
    index += jumps[index]

  return "cycle"

jumps = [2,1,0,-1,-2]
print(list_jumps(jumps))  #cycle

jumps = [1,2,3,4,-5]
print(list_jumps(jumps))  #out of bounds


